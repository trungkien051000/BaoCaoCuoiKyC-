@model ModelEF.Model.UserAccount

@{
    ViewBag.Title = "Tạo mới người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <i class="fa fa-save"></i>&nbsp; Tạo mới người dùng
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="col-lg-12 form-group">
            <div class="col-md-6">
                @Html.ActionLink("Quay lại", "Index", "User", new { @class = "btn btn-primary" })
            </div>
        </div>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="col-md-2">Tên đăng nhập</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.UsereName, new { @class = "form-control", @placeholder = "Mời nhập tên đăng nhập"  })
                @Html.ValidationMessageFor(model => model.UsereName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">Mật khẩu</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Mời nhập mật khẩu" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2">Trạng thái</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Status,  new { @class = "form-control", @placeholder = "Mời nhập trạng thái"  })
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo mới" class="btn btn-danger" />
            </div>
        </div>
    </div>
}


